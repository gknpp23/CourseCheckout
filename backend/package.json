{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node build/server.js",
    "build": "tsc --incremental --skipLibCheck",
    "postbuild": "cp -r src/public build/ 2>/dev/null || :",
    "dev": "nodemon --exec ts-node src/server.ts",
    "debug": "NODE_ENV=development ts-node src/server.ts",
    "prod": "npm install --omit=dev && npm run build && npm start",
    "postinstall": "(npm rebuild --update-binary || echo 'Optional dependency rebuild skipped') && npm run clean:cache",
    "clean": "rm -rf build node_modules package-lock.json .npm_cache",
    "clean:cache": "rm -rf .npm_cache",
    "test": "jest --passWithNoTests --runInBand",
    "lint": "eslint . --ext .ts,.js --cache",
    "format": "prettier --write ."
  },
  "keywords": [
    "api",
    "backend",
    "nodejs"
  ],
  "author": "Seu Nome <seu.email@example.com>",
  "license": "ISC",
  "description": "API Server para Aplicação Fábrica do Liso",
  "dependencies": {
    "axios": "^1.8.4",
    "body-parser": "^1.20.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "mongodb": "^6.15.0",
    "mongoose": "^8.13.0",
    "nodemailer": "^6.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "cache": false
  },
  "type": "module"
}