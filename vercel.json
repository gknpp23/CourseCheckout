{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/angular",
      "config": {
        "dist": "frontend/dist/frontend/browser",
        "server": "frontend/dist/frontend/server/main.js"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1",
      "continue": true
    },
    {
      "src": "/.*",
      "dest": "/frontend/index.html"
    }
  ]
}
